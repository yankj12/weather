<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- 控制台打印日志的相关配置 --> 
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender"> 
    <!-- 日志格式 -->
    <encoder>
        <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] [%level] [%logger] [%class:%line] - %m%n</pattern>
    </encoder>
    <!-- 日志级别过滤器 -->
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <!-- 过滤的级别 -->
      <level>INFO</level>
      <!-- 匹配时的操作：接收（记录） -->
      <onMatch>ACCEPT</onMatch>
      <!-- 不匹配时的操作：拒绝（不记录） -->
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>

  <!-- 文件保存日志的相关配置 --> 
  <appender name="ERROR-OUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- 日志格式 -->
    <encoder>
        <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] [%level] [%logger] [%class:%line] - %m%n</pattern>
    </encoder>
    <!-- 日志级别过滤器 -->
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <!-- 过滤的级别 -->
      <level>ERROR</level>
      <!-- 匹配时的操作：接收（记录） -->
      <onMatch>ACCEPT</onMatch>
      <!-- 不匹配时的操作：拒绝（不记录） -->
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>
  
  <appender name="consolelog" class="ch.qos.logback.core.ConsoleAppender">
    <!-- 日志格式 -->
    <encoder>
        <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%thread] [%level] [%logger] - %m%n</pattern>
    </encoder>
  </appender>
  
  <logger name="com.yan.weather.controller.WeatherRestController" additivity="false" level="DEBUG">
    <appender-ref ref="consolelog" />
  </logger>
  <logger name="com.yan.weather.service.impl.WeatherHistoryServiceImpl" additivity="false" level="DEBUG">
    <appender-ref ref="consolelog" />
  </logger> 
  
  <!-- 记录错误日志 -->
  <logger name="error" additivity="false" level="INFO">
    <appender-ref ref="ERROR-OUT" />
  </logger>
  
  <!-- 基于dubug处理日志：具体控制台或者文件对日志级别的处理还要看所在appender配置的filter，如果没有配置filter，则使用root配置 -->
  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="ERROR-OUT" />
  </root>
</configuration>